header.header
    nav.nav.nav--tours
        a.nav__el(href="/") <span class="noMobile">All tours</span>
        
    .header__logo
        a(href='/')
            img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user 
            a.nav__el--logout Log out
            a.userprofile(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name}`)
                a.username(href="/me")= user.name.split(' ')[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="/signup") Sign up

